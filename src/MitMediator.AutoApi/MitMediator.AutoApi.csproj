<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <OutputType>Library</OutputType>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>7.0.0-alfa-8</Version>
        <Title>MitMediator.AutoApi</Title>
        <Authors>Dmitry Protko</Authors>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
        <Description>Attribute-driven Minimal API registration for MitMediator  </Description>
        <PackageProjectUrl>https://github.com/dzmprt/MitMediator.AutoApi</PackageProjectUrl>
        <PackageIcon>logo.png</PackageIcon>
        <RepositoryUrl>https://github.com/dzmprt/MitMediator.AutoApi</RepositoryUrl>
        <PackageTags>mediator;request;response;queries;commands;mitmediator;minimalapi;autoapi;cqrs;</PackageTags>
        <PackageReleaseNotes>v7.0.0-alfa-8
            Version for tests
Implemented automatic X-Total-Count header for ITotalCount responses  
Enabled Location header inference via IResourceKey on 201 Created responses</PackageReleaseNotes>
        <TrimMode>full</TrimMode>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\assets\logo.png" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\LICENSE" Pack="true" PackagePath="\" />
    </ItemGroup>
    
    <ItemGroup>
        <InternalsVisibleTo Include="MitMediator.AutoApi.Tests" />
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="MitMediator.AutoApi.Abstractions" Version="7.0.0-alfa-8" />
    </ItemGroup>
</Project>
